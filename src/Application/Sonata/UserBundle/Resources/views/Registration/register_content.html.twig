{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/signin.css') }}">
    <link rel="stylesheet" href="{{ asset('css/ie10-viewport-bug-workaround.css') }}">
{% endblock %}

{% block body %}
    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-signin">
        <h2 class="form-signin-heading">{{ 'title_user_registration'|trans({}, 'SonataUserBundle') }}</h2>
        {{ form_widget(form) }}
        <button type="submit" id="_submit" name="_submit" class="btn btn-lg btn-primary btn-block" >{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</button>
    </form>
{% endblock %}