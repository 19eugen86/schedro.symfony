{% extends '@Admin/base.html.twig' %}

{% block content %}
    <ul class="nav nav-tabs">
        <li role="presentation"><a href="{{ url("show_users") }}">{{ 'users'|trans }}</a></li>
        <li role="presentation" class="active"><a href="{{ url("show_user_groups") }}">{{ 'Groups'|trans }}</a></li>
    </ul>
    <h2 class="sub-header">
        {{ 'Groups'|trans }}
        <button class="btn btn-default" data-toggle="modal" data-target="#modal-window" data-action="{{ url("add_new_user_group") }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> {{ 'Add'|trans }}
        </button>
    </h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'Name'|trans }}</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for category in pagination %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td>
                        <a title="{{ 'Edit'|trans }}" href="#" data-toggle="modal" data-target="#modal-window" data-action="{{ url('edit_user_group', {'id': category.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a href="{{ url('delete_user_group', {'id': category.id }) }}" data-toggle="confirmation"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% include '@Admin/paginator.html.twig' %}
    </div>
{% endblock %}