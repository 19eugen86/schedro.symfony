{% extends '@Admin/base.html.twig' %}

{% block content %}
    <ul class="nav nav-tabs">
        <li role="presentation" class="active"><a href="{{ url("show_proportions") }}">Пропорции</a></li>
        <li role="presentation"><a href="{{ url("show_units") }}">Едининцы измерения</a></li>
        <li role="presentation"><a href="{{ url("show_system_settings") }}">Системные настройки</a></li>
    </ul>
    <h2 class="sub-header">
        Пропорции
        <button class="btn btn-default" data-toggle="modal" data-target="#modal-window" data-action="{{ url("add_new_proportion") }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Добавить
        </button>
    </h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Ед.1</th>
                <th>Продукт</th>
                <th>Коэфф.</th>
                <th>Ед. 2</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for proportion in pagination %}
                <tr>
                    <td>{{ proportion.unit1.name }}</td>
                    <td>{{ proportion.product.name }}</td>
                    <td>{{ proportion.ratio }}</td>
                    <td>{{ proportion.unit2.name }}</td>
                    <td>
                        {% if proportion.isModifiable %}
                            <a href="#" data-toggle="modal" data-target="#modal-window" data-action="{{ url('edit_proportion', {'id': proportion.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                            <a href="{{ url('delete_proportion', {'id': proportion.id }) }}" data-toggle="confirmation"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% include '@Admin/paginator.html.twig' %}
    </div>
{% endblock %}