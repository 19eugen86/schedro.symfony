{% extends '@Admin/base.html.twig' %}

{% block content %}
    <ul class="nav nav-tabs">
        <li role="presentation" class="active"><a href="{{ url("show_users") }}">{{ 'users'|trans }}</a></li>
        <li role="presentation"><a href="{{ url("show_user_groups") }}">{{ 'Groups'|trans }}</a></li>
    </ul>
    <h2 class="sub-header">
        Сотрудники
        <button class="btn btn-default" data-toggle="modal" data-target="#modal-window" data-action="{{ url("add_new_user") }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> {{ 'Add'|trans }}
        </button>
    </h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'Fullname'|trans }}</th>
                <th>{{ 'Groups'|trans }}</th>
                <th>{{ 'Phone'|trans }}</th>
                <th>{{ 'Email'|trans }}</th>
                <th>{{ 'Username'|trans }}</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for user in pagination %}
                <tr>
                    <td>{{ user.fullname }}</td>
                    <td>
                        {% for userGroup in user.groupNames %}
                            {{ userGroup }}{% if user.groupNames|length > 1 and not loop.last %}, {% endif %}
                        {% endfor %}
                    </td>
                    <td><a href="tel:{{ user.phone }}">{{ user.phone }}</a></td>
                    <td><a href="mailto:{{ user.email }}">{{ user.email }}</a></td>
                    <td>{{ user.username }}</td>
                    <td>
                        <a title="{{ 'Edit'|trans }}" href="#" data-toggle="modal" data-target="#modal-window" data-action="{{ url('edit_user', {'id': user.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a href="{{ url('delete_user', {'id': user.id }) }}" data-toggle="confirmation"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% include '@Admin/paginator.html.twig' %}
    </div>
{% endblock %}