{% extends '@Admin/base.html.twig' %}

{% block content %}
    <ul class="nav nav-tabs">
        <li role="presentation"><a href="{{ url("show_all_carriers") }}">Перевозчики</a></li>
        <li role="presentation"><a href="{{ url("show_all_drivers") }}">Водители</a></li>
        <li role="presentation" class="active"><a href="{{ url("show_all_vehicles") }}">Автомобили</a></li>
    </ul>
    <h2 class="sub-header">
        Автомобили
        <button class="btn btn-default" data-toggle="modal" data-target="#modal-window" data-action="{{ url("add_new_vehicle") }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Добавить
        </button>
    </h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Марка</th>
                <th>Модель</th>
                <th>Рег. номер</th>
                <th>Компания-перевозчик</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for vehicle in vehicles %}
                <tr>
                    <td>{{ vehicle.brand }}</td>
                    <td>{{ vehicle.model }}</td>
                    <td>{{ vehicle.registrationNumber }}</td>
                    <td>{{ vehicle.carrier.name }}</td>
                    <td>
                        <a href="#" data-toggle="modal" data-target="#modal-window" data-action="{{ url('edit_vehicle', {'id': vehicle.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a href="{{ url('delete_vehicle', {'id': vehicle.id }) }}" data-toggle="confirmation"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% include '@Admin/paginator.html.twig' %}
    </div>
{% endblock %}