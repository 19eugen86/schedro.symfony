{% extends '@Admin/base.html.twig' %}

{% block content %}
    <ul class="nav nav-tabs">
        <li role="presentation" class="active"><a href="{{ url("show_cities") }}">Города</a></li>
        <li role="presentation"><a href="{{ url("show_countries") }}">Страны</a></li>
    </ul>
    <h2 class="sub-header">
        Города
        <button class="btn btn-default" data-toggle="modal" data-target="#modal-window" data-action="{{ url("add_new_city") }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Добавить
        </button>
    </h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Город</th>
                <th>Страна</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for city in pagination %}
                <tr>
                    <td>{{ city.name }}</td>
                    <td>{{ city.country.name }}</td>
                    <td>
                        <a href="#" data-toggle="modal" data-target="#modal-window" data-action="{{ url('edit_city', {'id': city.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a href="{{ url('delete_city', {'id': city.id}) }}" data-toggle="confirmation"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% include '@Admin/paginator.html.twig' %}
    </div>
{% endblock %}