{% extends '@Admin/base.html.twig' %}

{% block content %}
    <ul class="nav nav-tabs">
        <li role="presentation" class="active"><a href="{{ url("show_all_cities") }}">Города</a></li>
        <li role="presentation"><a href="{{ url("show_all_countries") }}">Страны</a></li>
    </ul>
    <h2 class="sub-header">
        Города
        <button class="btn btn-default" data-toggle="modal" data-target="#newCity">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Добавить
        </button>
    </h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Город</th>
                <th>Страна</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for city in cities %}
                <tr>
                    <td>{{ city.name }}</td>
                    <td>{{ city.country.name }}</td>
                    <td>
                        <a href="#" data-toggle="modal" data-target="#editCity{{ city.id }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a href="{{ url('delete_city', {'id': city.id}) }}" data-toggle="confirmation"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                    </td>
                </tr>
                <div class="modal fade" id="editCity{{ city.id }}" tabindex="-1" role="dialog" aria-labelledby="editCityLabel{{ city.id }}" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            {{ render(controller('AdminBundle:City:edit', {'id': city.id})) }}
                        </div>
                    </div>
                </div>
            {% endfor %}
            </tbody>
        </table>
        {% include '@Admin/paginator.html.twig' %}
    </div>
    <div class="modal fade" id="newCity" tabindex="-1" role="dialog" aria-labelledby="newCityLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                {{ render(controller('AdminBundle:City:new')) }}
            </div>
        </div>
    </div>
{% endblock %}