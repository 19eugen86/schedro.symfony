{% extends '@Admin/base.html.twig' %}

{% block content %}
    <ul class="nav nav-tabs">
        <li role="presentation"><a href="{{ url("show_all_branches") }}">Филиалы</a></li>
        <li role="presentation" class="active"><a href="{{ url("show_all_branches_warehouses") }}">Склады</a></li>
    </ul>
    <h2 class="sub-header">
        Филиалы &raquo; Склады
        <button class="btn btn-default" data-toggle="modal" data-target="#modal-window" data-action="{{ url("add_new_branches_warehouse") }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Добавить
        </button>
    </h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Склад</th>
                <th>Филиал</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for warehouse in warehouses %}
                <tr>
                    <td>{{ warehouse.name }}</td>
                    <td>{{ warehouse.department.name }}</td>
                    <td>
                        <a href="#" data-toggle="modal" data-target="#modal-window" data-action="{{ url('edit_branches_warehouse', {'id': warehouse.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a href="{{ url('delete_branches_warehouse', {'id': warehouse.id }) }}" data-toggle="confirmation"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% include '@Admin/paginator.html.twig' %}
    </div>
{% endblock %}