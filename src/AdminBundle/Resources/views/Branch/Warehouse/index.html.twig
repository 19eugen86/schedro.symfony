{% extends '@Admin/base.html.twig' %}

{% block content %}
    <ul class="nav nav-tabs">
        <li role="presentation"><a href="{{ url("show_all_branches") }}">Филиалы</a></li>
        <li role="presentation" class="active"><a href="{{ url("show_all_branches_warehouses") }}">Склады</a></li>
    </ul>
    <h2 class="sub-header">
        Филиалы &raquo; Склады
        <button class="btn btn-default" data-toggle="modal" data-target="#modal-window" data-action="{{ url("add_new_branches_warehouse") }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Добавить
        </button>
    </h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Склад</th>
                <th>Филиал</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for warehouse in warehouses %}
                <tr>
                    <td>{{ warehouse.name }}</td>
                    <td>{{ warehouse.department.name }}</td>
                    <td>
                        <a title="Камеры" href="#" data-action="{{ url('show_all_cells_of_warehouse', {'warehouseId': warehouse.id}) }}" data-toggle="collapse" data-target="#warehouse{{ warehouse.id }}Cells" aria-expanded="false" aria-controls="warehouse{{ warehouse.id }}Cells"><span class="glyphicon glyphicon-tasks" aria-hidden="true"></span></a>
                        <a title="Редактировать" href="#" data-toggle="modal" data-target="#modal-window" data-action="{{ url('edit_branches_warehouse', {'id': warehouse.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a title="Удалить" href="{{ url('delete_branches_warehouse', {'id': warehouse.id }) }}" data-toggle="confirmation"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                    </td>
                </tr>
                <tr>
                    <td colspan="3">
                        <div class="collapse" id="warehouse{{ warehouse.id }}Cells"></div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% include '@Admin/paginator.html.twig' %}
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            $('[data-toggle="collapse"]').click(function(){
                var targetId = $(this).data("target");
                $.ajax({
                    url: $(this).data("action"),
                    beforeSend: function() {
                        $(targetId).html('');
                    },
                    success: function(response) {
                        $(targetId).html(response);
                    }
                });
            });
        });
    </script>
{% endblock %}