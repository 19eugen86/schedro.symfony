{% extends '@Admin/base.html.twig' %}

{% block content %}
    <ul class="nav nav-tabs">
        <li role="presentation" class="active"><a href="{{ url("show_all_employees") }}">Сотрудники</a></li>
        <li role="presentation"><a href="{{ url("show_all_employee_categories") }}">Категории</a></li>
    </ul>
    <h2 class="sub-header">
        Сотрудники
        <button class="btn btn-default" data-toggle="modal" data-target="#modal-window" data-action="{{ url("add_new_employee") }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Добавить
        </button>
    </h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>ФИО</th>
                <th>Категория</th>
                <th>Тел.</th>
                <th>Эл. почта</th>
                <th>Логин</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for employee in employees %}
                <tr>
                    <td>{{ employee.fullname }}</td>
                    <td>{{ employee.category.name }}</td>
                    <td><a href="tel:{{ employee.phone }}">{{ employee.phone }}</a></td>
                    <td><a href="mailto:{{ employee.email }}">{{ employee.email }}</a></td>
                    <td>{{ employee.username }}</td>
                    <td>
                        <a href="#" data-toggle="modal" data-target="#modal-window" data-action="{{ url('edit_employee', {'id': employee.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a href="{{ url('delete_employee', {'id': employee.id }) }}" data-toggle="confirmation"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% include '@Admin/paginator.html.twig' %}
    </div>
{% endblock %}