{% extends '@Admin/base.html.twig' %}

{% block content %}
    <ul class="nav nav-tabs">
        <li role="presentation"><a href="{{ url("show_all_proportions") }}">Пропорции</a></li>
        <li role="presentation" class="active"><a href="{{ url("show_all_units") }}">Едининцы измерения</a></li>
        <li role="presentation"><a href="{{ url("show_system_settings") }}">Системные настройки</a></li>
    </ul>
    <h2 class="sub-header">
        Едининцы измерения
        <button class="btn btn-default" data-toggle="modal" data-target="#modal-window" data-action="{{ url('add_new_unit') }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Добавить
        </button>
    </h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Название</th>
                <th>Сокращение</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for unit in units %}
                <tr>
                    <td>{{ unit.name }}</td>
                    <td>{{ unit.shortName }}</td>
                    <td>
                        {% if unit.isModifiable %}
                        <a href="#" data-toggle="modal" data-target="#modal-window" data-action="{{ url('edit_unit', {'id': unit.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a href="{{ url('delete_unit', {'id': unit.id }) }}" data-toggle="confirmation"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% include '@Admin/paginator.html.twig' %}
    </div>
{% endblock %}