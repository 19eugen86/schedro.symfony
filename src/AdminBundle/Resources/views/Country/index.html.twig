{% extends '@Admin/base.html.twig' %}

{% block content %}
    <ul class="nav nav-tabs">
        <li role="presentation"><a href="{{ url("show_all_cities") }}">Города</a></li>
        <li role="presentation" class="active"><a href="{{ url("show_all_countries") }}">Страны</a></li>
    </ul>
    <h2 class="sub-header">
        Страны
        <button class="btn btn-default" data-toggle="modal" data-target="#newCountry">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Добавить
        </button>
    </h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Страна</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for country in countries %}
                <tr>
                    <td>{{ country.name }}</td>
                    <td>
                        <a href="#" data-toggle="modal" data-target="#editCountry{{ country.id }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a href="{{ url('delete_country', {'id': country.id}) }}" data-toggle="confirmation"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                    </td>
                </tr>
                <div class="modal fade" id="editCountry{{ country.id }}" tabindex="-1" role="dialog" aria-labelledby="editCountryLabel{{ country.id }}" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            {{ render(controller('AdminBundle:Country:edit', {'id': country.id})) }}
                        </div>
                    </div>
                </div>
            {% endfor %}
            </tbody>
        </table>
        {% include '@Admin/paginator.html.twig' %}
    </div>
    <div class="modal fade" id="newCountry" tabindex="-1" role="dialog" aria-labelledby="newCountryLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                {{ render(controller('AdminBundle:Country:new')) }}
            </div>
        </div>
    </div>
{% endblock %}