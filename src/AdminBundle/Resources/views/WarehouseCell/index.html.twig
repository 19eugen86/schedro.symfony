<div class="card card-block">
    <div class="row placeholders">
        {% for cell in cells %}
            <div class="col-xs-6 col-sm-3 placeholder" data-toggle="cellChart{{ warehouse.id }}" id="cellChart{{ cell.id }}" data-full-area="{{ cell.area }}" data-used-area="{{ cell.usedArea }}">
                <h4>
                    S: {{ cell.area }} м²
                    <a title="Редактировать" href="#" data-toggle="modal" data-target="#modal-window" data-action="{{ url('edit_warehouses_cell', {'id': cell.id, 'warehouseId': cell.warehouse.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="{{ url('delete_warehouses_cell', {'id': cell.id, 'warehouseId': cell.warehouse.id }) }}" data-toggle="deleteCellConfirmation"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </h4>
                <span class="text-muted">{{ cell.name }} ({{ cell.productCategory.name }})</span>
            </div>
        {% endfor %}
    </div>
</div>
{% block javascripts %}
    <script src="{{ asset('js/circle-progress.js') }}"></script>
    <script>
        $(function () {
            $('[data-toggle="deleteCellConfirmation"]').confirmation({
                title: 'Вы уверены?',
                btnOkLabel: '<i class="icon-ok-sign icon-white"></i> Да',
                btnCancelLabel: '<i class="icon-remove-sign"></i> Нет',
                singleton: true,
                popout: true,
                placement: 'left'
            });

            $('[data-target="#modal-window"]').click(function(){
                $.ajax({
                    url: $(this).data("action"),
                    beforeSend: function() {
                        $("#modal-window-content").html('');
                    },
                    success: function(response) {
                        $("#modal-window-content").html(response);
                    }
                });
            });

            var charts = $('[data-toggle="cellChart{{ warehouse.id }}"]');

            $.each(charts, function(key, value) {
                var targetId = $(value).attr('id');
                var fullArea = $(value).data('full-area');
                var usedArea = $(value).data('used-area');
                var percentageValue = usedArea/fullArea;

                $('#'+targetId).circleProgress({
                    value: percentageValue
                }).on('circle-animation-progress', function(event, progress) {
                    var percentageText = parseInt(100*progress*percentageValue) + '%';

                    var X = 28;
                    var Y = 59;

                    if (percentageText.length == 2) {
                        X = 33;
                    } else if (percentageText.length == 4) {
                        X = 18;
                    }

                    var canvas = $('#'+targetId).find("canvas")[0];
                    var ctx = canvas.getContext("2d");
                    ctx.font = "25px Arial";
                    ctx.fillText(percentageText, X, Y);
                });
            });
        });
    </script>
{% endblock %}