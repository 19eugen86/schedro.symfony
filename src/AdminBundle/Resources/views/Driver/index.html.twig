{% extends '@Admin/base.html.twig' %}

{% block content %}
    <ul class="nav nav-tabs">
        <li role="presentation"><a href="{{ url("show_carriers") }}">Перевозчики</a></li>
        <li role="presentation" class="active"><a href="{{ url("show_drivers") }}">Водители</a></li>
        <li role="presentation"><a href="{{ url("show_vehicles") }}">Автомобили</a></li>
    </ul>
    <h2 class="sub-header">
        Водители
        <button class="btn btn-default" data-toggle="modal" data-target="#modal-window" data-action="{{ url("add_new_driver") }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Добавить
        </button>
    </h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>ФИО</th>
                <th>Телефон</th>
                <th>Компания-перевозчик</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for driver in pagination %}
                <tr>
                    <td>{{ driver.fullName }}</td>
                    <td><a href="tel:{{ driver.phoneNumber }}">{{ driver.phoneNumber }}</a></td>
                    <td>{{ driver.carrier.name }}</td>
                    <td>
                        <a href="#" data-toggle="modal" data-target="#modal-window" data-action="{{ url('edit_driver', {'id': driver.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a href="{{ url('delete_driver', {'id': driver.id }) }}" data-toggle="confirmation"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% include '@Admin/paginator.html.twig' %}
    </div>
{% endblock %}