{% extends '@Admin/base.html.twig' %}

{% block content %}
    <h2 class="sub-header">
        Клиенты
        <button class="btn btn-default" data-toggle="modal" data-target="#modal-window" data-action="{{ url("add_new_client") }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Добавить
        </button>
    </h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Адрес</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for client in clients %}
                    <tr>
                        <td>{{ client.name }}</td>
                        <td>{{ client.address }}</td>
                        <td>
                            <a href="#" data-toggle="popover" data-placement="left" data-title="Описание" data-trigger="focus" data-content="{{ client.description }}"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span></a>
                            <a href="#" data-toggle="modal" data-target="#modal-window" data-action="{{ url('edit_client', {'id': client.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                            <a href="{{ url('delete_client', {'id': client.id}) }}" data-toggle="confirmation"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {% include '@Admin/paginator.html.twig' %}
    </div>
{% endblock %}