{% extends 'base.html.twig' %}

{% block content %}
    <ul class="nav nav-tabs">
        <li role="presentation" class="active"><a href="{{ url("show_factories_reminders") }}"><span class="glyphicon glyphicon-compressed" aria-hidden="true"></span> {{ 'Reminders'|trans }}</a></li>
        <li role="presentation"><a href="#"><span class="glyphicon glyphicon-save" aria-hidden="true"></span> {{ 'Arrival'|trans }}</a></li>
        <li role="presentation"><a href="#"><span class="glyphicon glyphicon-open" aria-hidden="true"></span> {{ 'Consumption'|trans }}</a></li>
    </ul>
    <h2 class="sub-header">
        Произведенная продукция
        <button class="btn btn-default" data-toggle="modal" data-target="#modal-window" data-action="{{ url("receive_products_factored") }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> {{ 'Receive'|trans }}
        </button>
        <button class="btn btn-default" data-toggle="modal" data-target="#modal-window" data-action="#">
            <span class="glyphicon glyphicon-minus" aria-hidden="true"></span> {{ 'Send'|trans }}
        </button>
    </h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Дата производства</th>
                <th>№ партии</th>
                <th>Продукт</th>
                <th>Остаток (кг)</th>
                <th>Комбинат</th>
                <th>Товарная группа</th>
            </tr>
            </thead>
            <tbody>
            {% for product in pagination %}
                <tr>
                    <td>{{ product.date|date('d-m-Y H:i:s') }}</td>
                    <td>{{ product.consignment }}</td>
                    <td>{{ product.product.name }}</td>
                    <td>{{ product.quantity }}</td>
                    <td>{{ product.department.name }}</td>
                    <td>{{ product.product.category.name }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% include 'paginator.html.twig' %}
    </div>
{% endblock %}