{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/grid.css') }}">
{% endblock %}

{% block body %}
    {% include 'top_menu.html.twig' %}
    <div class="container">
        <h3>All clients</h3>
        {% for client in clients %}
            <div class="row">
                <div class="col-md-4">{{ client.name }}</div>
                <div class="col-md-4">{{ client.address }}</div>
                <div class="col-md-4">{{ client.city.name }} - {{ client.city.country.name }}</div>
                <div class="col-md-12">{{ client.description }}</div>
            </div>
        {% endfor %}
        <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#newClient" href="{{ url('add_new_client') }}">New Client</button>
    </div><!-- /.container -->
{% endblock %}